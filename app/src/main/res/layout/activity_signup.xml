<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde1">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Insira os seus dados para o cadastro:"
        android:textSize="@dimen/singup_text_size_1"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/login_margin_text_start"
        android:layout_marginTop="@dimen/signup_margin_text_top"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account_circle"
        app:civ_circle_background_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/signup_margin_text_top"/>


    <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="@dimen/singup_text_size_1"
        app:layout_constraintTop_toBottomOf="@id/ivFoto"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/login_margin_text_start"
        android:layout_marginTop="@dimen/signup_margin_text_top"
        />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/login_margin_text_start"
        android:layout_marginEnd="@dimen/login_margin_text_start"
        app:layout_constraintTop_toBottomOf="@id/tvNome"
        android:layout_marginTop="@dimen/login_margin_edit_top"
        android:hint="@string/name_hint"
        android:textColorHint="@color/grey"
        android:paddingHorizontal="@dimen/login_padding"
        />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="@dimen/singup_text_size_1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etNome"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/login_margin_text_start"
        android:layout_marginTop="@dimen/login_margin_text_top"
        />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/login_margin_text_start"
        android:layout_marginEnd="@dimen/login_margin_text_start"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        android:layout_marginTop="@dimen/login_margin_edit_top"
        android:hint="@string/email_hint"
        android:textColorHint="@color/grey"
        android:paddingHorizontal="@dimen/login_padding"
        />

    <TextView
        android:id="@+id/tvCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cpf"
        android:textSize="@dimen/singup_text_size_1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/login_margin_text_start"
        android:layout_marginTop="@dimen/login_margin_text_top"
        />

    <EditText
        android:id="@+id/etCpf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/login_margin_text_start"
        android:layout_marginEnd="@dimen/login_margin_text_start"
        app:layout_constraintTop_toBottomOf="@id/tvCpf"
        android:layout_marginTop="@dimen/login_margin_edit_top"
        android:hint="@string/cpf_hint"
        android:textColorHint="@color/grey"
        android:paddingHorizontal="@dimen/login_padding"
        />

    <TextView
        android:id="@+id/tvTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telefone"
        android:textSize="@dimen/singup_text_size_1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etCpf"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/login_margin_text_start"
        android:layout_marginTop="@dimen/login_margin_text_top"
        />

    <EditText
        android:id="@+id/etTelefone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/login_margin_text_start"
        android:layout_marginEnd="@dimen/login_margin_text_start"
        app:layout_constraintTop_toBottomOf="@id/tvTelefone"
        android:layout_marginTop="@dimen/login_margin_edit_top"
        android:hint="@string/telefone_hint"
        android:textColorHint="@color/grey"
        android:paddingHorizontal="@dimen/login_padding"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btCarrinho"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:background="@color/black"
        android:text="Adicionar EndereÃ§o"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/etTelefone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>